# App Settings
APP_HOST=127.0.0.1
APP_PORT=8000
APP_CALLBACK_URL=http://localhost:8000/callback

# Asgardeo Organization (LOCAL WSO2 Identity Server)
ASGARDEO_ORG_NAME=carbon.super
ASGARDEO_BASE_URL=https://localhost:9443/t/carbon.super
ASGARDEO_TOKEN_URL=https://localhost:9443/t/carbon.super/oauth2/token
ASGARDEO_AUTHORIZE_URL=https://localhost:9443/t/carbon.super/oauth2/authorize
ASGARDEO_JWKS_URL=https://localhost:9443/t/carbon.super/oauth2/jwks

# ─────────────────────────────────────────────────────────────────
# Orchestrator Application (For User Delegation Flow)
# ─────────────────────────────────────────────────────────────────
ORCHESTRATOR_CLIENT_ID=your-orchestrator-client-id
ORCHESTRATOR_CLIENT_SECRET=your-orchestrator-client-secret
ORCHESTRATOR_AGENT_ID=your-orchestrator-agent-id
ORCHESTRATOR_AGENT_SECRET=your-orchestrator-agent-secret

# ─────────────────────────────────────────────────────────────────
# Token Exchanger Application (For RFC 8693 Token Exchange)
# ─────────────────────────────────────────────────────────────────
TOKEN_EXCHANGER_CLIENT_ID=your-token-exchanger-client-id
TOKEN_EXCHANGER_CLIENT_SECRET=your-token-exchanger-client-secret

# ─────────────────────────────────────────────────────────────────
# Worker Agents (Agent IDs ONLY - no separate Apps)
# ─────────────────────────────────────────────────────────────────
HR_AGENT_ID=your-hr-agent-id
HR_AGENT_SECRET=your-hr-agent-secret

IT_AGENT_ID=your-it-agent-id
IT_AGENT_SECRET=your-it-agent-secret

APPROVAL_AGENT_ID=your-approval-agent-id
APPROVAL_AGENT_SECRET=your-approval-agent-secret

BOOKING_AGENT_ID=your-booking-agent-id
BOOKING_AGENT_SECRET=your-booking-agent-secret

# ─────────────────────────────────────────────────────────────────
# Other Settings
# ─────────────────────────────────────────────────────────────────
API_AUDIENCE=onboarding-api
OPENAI_API_KEY=sk-your-openai-key
